<% provide :title, t("title_signup") %>
<h1><%= t ".sign_up" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t(".confirmation") %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t ".creat_accout", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
